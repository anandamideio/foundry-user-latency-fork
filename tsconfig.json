{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "remove",
    "inlineSourceMap": false,
    "lib": ["DOM", "ES6", "ES2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "ES2020",
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "types": ["./types.d.ts"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*", "./types.d.ts"]
}
